
{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [ "es6" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./lib/js",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "./src/**/*"
  ]
}

